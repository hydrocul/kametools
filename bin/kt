#!/bin/sh

if [ -z "$KT_HOME" ] ; then
  KT_HOME=$0
  if [ -n "`readlink $KT_HOME`" ] ; then
    KT_HOME="`readlink $KT_HOME`"
  fi
  KT_HOME="`dirname $KT_HOME`"
  KT_HOME="`dirname $KT_HOME`"
fi

KT_PLATFORM=
if [ `uname` = "Darwin" ] ; then
  KT_PLATFORM="Mac"
else
  KT_PLATFORM="Gnome"
fi

scala -Dkt.platform=$KT_PLATFORM -cp "$KT_HOME/class:$KT_HOME/lib/*" hydrocul.kametools.Main "$@"